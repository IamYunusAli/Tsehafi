<div class="login">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
  <div class="inputs">
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: 'Email', class: 'inp' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' , class: 'inp' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="log-button">
    <%= f.submit "Log in" , class: 'log-button btn'%>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
