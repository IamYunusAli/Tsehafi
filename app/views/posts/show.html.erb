<div class="row">
<h4><p>Post by <%= @user.name %></p></h4>
<p>Comments <%= @post.comments_counter %>, Likes <%= @post.likes_counter %></p>
</div>
<p><%= @post.text %></p>
        <% @post.comments.each do |comment| %>
          <p>
            <%= User.find(comment.author_id).name %>: <%= comment.text %>
          </p>
    <% end %>
</ul>
<%= form_with model: @comment, url: post_path, method: :post, scope: :comment do |f| %>
    <%= f.text_area :text, label: "Add Comment" %>
    <%= f.submit "Comment" %>
  <% end %>
  <%= form_with model: @like, url: like_path, method: :post do |f| %>
    <%= f.submit "Like", class: "btn btn-danger" %>
<% end %>